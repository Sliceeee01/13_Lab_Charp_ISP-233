<Window x:Class="InspirationalQuotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Цитаты " Height="300" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Background="Black">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            
            <TextBlock Text="Цитаты Стэтхема" 
                      FontSize="20"  
                      Foreground="White"
                      HorizontalAlignment="Center"/>


            <Border 
                   Width="400"
                   Height="120">

                <TextBlock x:Name="zitataText" 
                          Text="Нажмите кнопку для получения цитаты" 
                          FontSize="16" 
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </Border>


            <Button x:Name="getZitataButton" 
                   Content="✒Новая цитата" 
                   Background="Black" 
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Width="150" 
                   Height="40"
                   Margin="0,20,0,0"
                   Click="GetZitataButton_Click"/>

        </StackPanel>
    </Grid>
</Window>